<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.UniverseActivity">

    <TextView
        android:id="@+id/universe_current_solarSystem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/universe_currentSolarSystemLabel"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Current SolarSystem"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graphView"
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:layout_below="@+id/universe_current_solarSystem"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="9dp" />

    <Button
        android:id="@+id/game_tradeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/graphView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="2dp"
        android:text="Visit" />

    <TextView
        android:id="@+id/universe_currentSolarSystemLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="9dp"
        android:text="Current Solar System" />

    <TextView
        android:id="@+id/fuelTextView"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="10dp"
        android:text="Current Fuel" />
    <Button
            android:id="@+id/game_saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/graphView"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="2dp"
            android:text="Save" />

</RelativeLayout>
</ScrollView>